<div class="makeHorizontalBarDisappear">
        <div class="row">
                <div class="col-md">
                        <p>© {{ website_name }} {{ 'now'|date('Y') }}</p>
                        <p>{{ 'Version'|trans }} {{ website_version }}</p>
                        <p>{{ 'Created by'|trans }} <a href="http://www.weflowandflow.com">{{ webmaster }} </a></p>
                        <p>✉️ <a href="{{ path('qtf_contact') }}">{{ 'Contact us'|trans }}</a></p>
                </div>

                <div class="col-md">
                        <p>
                                <a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'en'})) }}">
                                        <img src="{{ asset('./img/flags/en.png') }}" alt="English" height="30px" />
                                </a>
                                |
                                <a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'fr'})) }}">
                                        <img src="{{ asset('./img/flags/fr.png') }}" alt="Français" height="30px" />
                                </a>
                        </p>
                        {% if is_granted('ROLE_USER') %}
                                <p>🏠 <a href="{{ path('qtf_quote_index') }}">{{ 'Home'|trans }}</a></p>
                        {% else %}
                                <p>🏠 <a href="{{ path('qtf_welcome_index') }}">{{ 'Home'|trans }}</a></p>
                        {% endif %}

                        <p>🗺 <a href="https://quotify.weflowandflow.com/public/html/sitemap.html" target="new">{{ 'Site map'|trans }}</a></p>
                </div>

                <div class="col-md">
                        <p>{{ 'Legal notice'|trans }}</p>
                        <p>{{ 'Help'|trans }}</p>
                </div>


        </div>

</div>





