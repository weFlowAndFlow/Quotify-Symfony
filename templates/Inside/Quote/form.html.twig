{# templates/Inside/Quote/form.html.twig #}

{% extends "Inside/layout.html.twig" %}

{% block title %}
    {{ parent() }} - Home
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('style/form.css') }}" rel="stylesheet"/>
{% endblock %}

{% block quote_body %}

    {% form_theme form 'bootstrap_4_layout.html.twig' %}

    {{ form_start(form) }}
    {{ form_row(form.author, {'label': 'By'}) }}
    <div class="addFieldData"><a href="{{ path('qtf_author_create', {'caller' : 'qtf_quote_create'}) }}">Add new
            author</a></div>
    {{ form_row(form.originalWork, {'label': 'In'}) }}
    <div class="addFieldData"><a href="{{ path('qtf_work_create', {'caller' : 'qtf_quote_create'}) }}">Add new original
            work</a></div>
    {{ form_row(form.categories) }}
    <div class="addFieldData"><a href="{{ path('qtf_category_create', {'caller' : 'qtf_quote_create'}) }}">Add new
            category</a></div>
    <br/>
    {{ form_row(form.text) }}
    {{ form_row(form.notes) }}
    <div class="row">
        <div class="col-2"></div>
        <div class="col-2"><a href="{{ path(previousPage, {'id': id}) }}" class="btn btn-outline-secondary">Cancel</a>
        </div>
        <div class="col-1"></div>
        <div class="col-2">{{ form_row(form.save) }}</div>
        <div class="col-5"></div>
    </div>
    {{ form_end(form) }}



{% endblock %}

	{% block javascripts %}
        {{ parent() }}

        <script>
            var $author = $('#quote_author');
            $author.change(function () {
                var $form = $(this).closest('form');
                var data = {};
                data[$author.attr('name')] = $author.val();
                $.ajax({
                    url: $form.attr('action'),
                    type: $form.attr('method'),
                    data: data,
                    success: function (html) {
                        $('#quote_originalWork').replaceWith(
                            $(html).find('#quote_originalWork')
                        );
                    }
                });
            });
        </script>
    {% endblock %}