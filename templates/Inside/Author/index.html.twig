{# templates/Inside/Author/index.html.twig #}

{% extends "Inside/layout.html.twig" %}

{% block title %}
	{{ parent() }} - Authors
{% endblock %}


{% block quote_body %}



		<table class="table table-hover">
			{% for author in authors %}
				<tr>
					<td><a href="{{ path('qtf_author_delete', {'id': author.id}) }}" class="btn btn-outline-danger">Delete</a></td>
					<td><a href="{{ path('qtf_author_edit', {'id': author.id}) }}" class="btn btn-outline-warning">Edit</a></td>
					<td>{{ author.forename }}</td>
					<td>{{ author.name }}</td>
					<td>
							{% if author.quotes|length == 0 %}
								{{ author.quotes|length }} quote
							{% endif %}

						<a href="{{ path('qtf_author_quotes', {'id': author.id}) }}">
							{% if author.quotes|length == 1 %}
								{{ author.quotes|length }} quote
							{% elseif author.quotes|length > 1 %}
								{{ author.quotes|length }} quotes
							{% endif %}
						</a>
					</td>
				</tr>
			{% endfor %}
		</table>



	<div class="paginator">
		{{ knp_pagination_render(authors) }}
	</div>


	
{% endblock %}